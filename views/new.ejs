<% layout('/layouts/Boilerplate') %>
<div class="row">
  <h1 class="text-center">New villa</h1>
  <div class="col-6 offset-3">
    <form action="/villas" method="POST" class="validate_form" novalidate>
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="villa[title]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="villa[location]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="Image">Image url </label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="villa[image]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>


      <button class="btn btn-success">Add villa</button>
    </form>
    <a href="/villas">All villas</a>
  </div>
</div>


