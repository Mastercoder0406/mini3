<% layout('/layouts/Boilerplate') %>
<link rel="stylesheet" href="/stylesheets/stars.css" />

<div class="row">
  <div class="col-6">
    <div id="villaCarousel" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <% villa.images.forEach((img, i) => { %>
        <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
          <img src="<%= img.url%>" class="d-block w-100" alt="" />
        </div>
        <% }) %>
      </div>
      <% if(villa.images.length > 1) {%>
      <a
        class="carousel-control-prev"
        href="#villaCarousel"
        role="button"
        data-slide="prev"
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a
        class="carousel-control-next"
        href="#villaCarousel"
        role="button"
        data-slide="next"
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
      <% } %>
    </div>

    <!-- Villa Description -->
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title"><%= villa.title %></h5>
        <p class="card-text"><%= villa.description %></p>
      </div>

      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= villa.location %></li>
        <li class="list-group-item">
          Submitted by <%= villa.author.username%>
        </li>
        <li class="list-group-item"><%= villa.price %>Rs./night</li>
        <li class="list-group-item">Contact Number: <%= villa.contact %></li>
      </ul>

      <% if(currentUser && villa.author.equals(currentUser._id)) {%>
      <div class="card-body">
        <a class="card-link btn btn-warning" href="/villas/<%=villa._id%>/edit"
          >Edit
        </a>
        <form
          class="d-inline"
          action="/villas/<%=villa._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger">Delete</button>
        </form>

        <div class="card-footer text-muted mt-2">
          <a href="/villas">All villas</a>
        </div>
      </div>
      <% } %>
    </div>
  </div>

  <div class="col-6">
    <!-- adding a map -->
    <div id="map"></div>

    <% if(currentUser){ %>
    <h2>Leave a Review</h2>
    <form
      action="/villas/<%=villa._id%>/reviews"
      method="post"
      class="mb-3 validated-form"
    >
      
      <div class="mb-3">
        <label class="form-label" for="rating">Rating: <span id="ratingValue">3</span></label>
        <input
          class="form-range"
          type="range"
          min="1"
          max="5"
          name="review[rating]"
          id="rating"
          oninput="updateRatingValue(this.value)"
        />
        
        <!-- Default value can be set to 3 -->
      </div>

      <div class="mb-3">
        <label class="form-label" for="body">Review</label>
        <textarea
          class="form-control"
          name="review[body]"
          id="body"
          cols="30"
          rows="3"
          required
        ></textarea>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
    <% } %>

    <h3>Reviews of the Customer</h3>

    <% for(let review of villa.reviews){ %>
    <div class="card mb-3">
      <div class="card-body">
        <h6 class="card-subtitle mb-2 text-muted">
          By <%= review.author.username%>
        </h6>
        <p class="starability-result" data-rating="<%=review.rating%>">
          Rated: <%= review.rating %> stars
        </p>
        <p class="card-text">Review: <%= review.body %></p>
        <% if(currentUser && review.author.equals(currentUser._id)) {%>
        <form
          action="/villas/<%=villa._id%>/reviews/<%=review._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-sm btn-danger"></button>
        </form>
        <% } %>
      </div>
    </div>

    <% } %>
  </div>
</div>

<script>
  const maptilerApiKey = '<%- process.env.MAPTILER_API_KEY %>';;
   const villa = <%- JSON.stringify(villa) %>
</script>
<script>
    function updateRatingValue(value) {
        document.getElementById('ratingValue').textContent = value;
    }

    // Initialize the displayed rating value
    document.addEventListener('DOMContentLoaded', () => {
        const slider = document.getElementById('rating');
        updateRatingValue(slider.value); // Set the initial value
    });
</script>


<script src="/javascripts/showPageMap.js"></script>
